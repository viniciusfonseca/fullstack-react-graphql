{
  "name": "fullstack-react-graphql",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "nodemon",
    "sync": "ts-node src/scripts/sync",
    "schema": "ts-node src/scripts/generateSchema",
    "test": "mocha",
    "build": "rimraf dist && tsc --build tsconfig.json",
    "start:prod": "node dist"
  },
  "mocha": {
    "require": "ts-node/register",
    "spec": "src/**/*.test.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git"
    ],
    "watch": [
      "src"
    ],
    "exec": "ts-node ./src/index.ts",
    "ext": "ts"
  },
  "dependencies": {
    "apollo-server": "^2.13.1",
    "bcrypt": "^4.0.1",
    "class-validator": "^0.12.2",
    "graphql": "^15.0.0",
    "inversify": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.2.0",
    "type-graphql": "^1.0.0-rc.1",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^7.0.2",
    "apollo-server-testing": "^2.13.1",
    "chai": "^4.2.0",
    "mocha": "^7.1.2",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  }
}
